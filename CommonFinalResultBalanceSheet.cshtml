@{
    ViewBag.Title = "Common Balance Sheet";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Common Balance Sheet</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default panel-primary2">
            <div class="panel-heading">Common Balance Sheet</div>
            <div class="panel-body">
                <div class="table-container1">
                    <div class="row table-top">
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label>
                                    Common Balance Sheet:
                                </label>
                                @*<select id="ddlInstitute" class="form-control"></select>*@
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label>
                                    Starting Date:
                                </label>
                                <div class="input-group date" id="dtStaringDate">
                                    <input id="txtStaringDate" type="text" class="form-control">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-th"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label> Ending Date: </label>
                                <div class="input-group date" id="dtEndingDate">
                                    <input id="txtEndingDate" type="text" class="form-control">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-th"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <button type="submit" id="btnView" class="btn btn-primary btn-column">View</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default panel-primary2">
            <div class="panel-heading">
                Common Balance Sheet
            </div>
            <div class="panel-body">
                <div class="table-container">
                    <table id="tblBalanceSheetReport" class="table table-striped table-bordered table-hover main-table">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Funds and Liabilities</th>
                                <th></th>
                                <th></th>
                                <th>Assets and Properties</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                        <tfoot>
                            <tr>
                                <th></th>
                                <th>Total</th>
                                <th></th>
                                <th><span id="spnTotalCredit"></span></th>
                                <th>Total</th>
                                <th></th>
                                <th><span id="spnToalDebit"></span></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_groupSummaryReport")
@Html.Partial("_ledgerSummaryReport")
@Html.Partial("_groupSchSummaryReport")
@Html.Partial("_TransactionDetails")
<script src="~/Scripts/CustomScripts/CommonFinalResultBalanceSheetReport.js"></script>


